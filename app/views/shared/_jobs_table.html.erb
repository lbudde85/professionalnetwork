
<table class="table table-hover demo-table-search" id="jobPostsTable">

  <thead>
    <tr>
      <th>Brand</th>
      <th>Details</th>

      <th>Attachments</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% job_posts.each do |job_post| %>
      <tr>
        <td class="v-align-middle">
          <p>
            <strong><%= job_post.user.company_name %></strong>
          </p>
        </td>

        <td class="v-align-left">
          <div class="row">
            <div class="col-md-4">
              <strong>Title:</strong>
            </div>
            <div class="col-md-8">
              <%= job_post.title %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <strong>Description:</strong>
            </div>
            <div class="col-md-8">
              <%= job_post.description %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <strong>Skills:</strong>
            </div>
            <div class="col-md-8">
              <%= job_post.skills %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <strong>Experience:</strong>
            </div>
            <div class="col-md-8">
              <%= job_post.experence_level %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <strong>Period:</strong>
            </div>
            <div class="col-md-8">
              <%= job_post.job_period.humanize %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <strong>Qualifications:</strong>
            </div>
            <div class="col-md-8">
              <%= job_post.qualifications %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <strong>Questions:</strong>
            </div>
            <div class="col-md-8">
              <%= job_post.questions %>
            </div>
          </div>
        </td>

        <td>
          <% if job_post.file_attachment? %>
            <%= link_to job_post.file_attachment.url do %>
              <span class="label label-important">
                <%= File.extname(job_post.file_attachment_file_name).split('.').last.upcase %>
              </span>
            <% end %>
          <% else %>
            <span class="label">No attachments</span>
          <% end %>

        </td>


        <td class="v-align-middle" style='white-space: nowrap;'>
          <% if current_user.brand? %>
            <%= link_to 'Delete', brand_jobs_path(job_post.id), method: :delete, 'data-confirm': 'Do you want to delete this job offer?', class: "btn btn-tag" %>
          <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
