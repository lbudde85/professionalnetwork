<h2>Register your new account</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group form-group-default">
    <% User.user_types.keys.each do |user_type| %>
      <div class="inline-controls">
        <%= f.radio_button :user_type, user_type %>
        <label class="inline control-label" for="user_user_type_<%= user_type %>"><%= user_type %></label>
      </div>
    <% end %>
  </div>

  <div class="form-group form-group-default">
    <div class="controls">
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: 'E-mail', required: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group form-group-default">
    <div class="controls">
      <%= f.label :company_name %>
      <%= f.text_field :company_name, placeholder: 'Company name', required: true, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group form-group-default">
        <div class="controls">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, placeholder: 'First name', required: true, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group form-group-default">
        <div class="controls">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, placeholder: 'Last name', required: true, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group form-group-default">
    <div class="controls">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: 'Password', required: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group form-group-default">
    <div class="controls">
      <%= f.label :country %>
      <%= f.select :country_id, Country.all.collect {|c| [ c.name, c.id ] }, { include_blank: true } %>
    </div>
  </div>

  <div class="checkbox check-primary">
    <%= f.check_box :tos_confirmed %>
    <%= f.label :tos_confirmed, 'I confirm the terms and conditions' %>
  </div>

  <div class="actions">
    <%= f.submit "Register", class: "btn btn-primary btn-cons m-t-10" %>
    or
    <%= link_to 'Sign in', root_path %>
  </div>
<% end %>

